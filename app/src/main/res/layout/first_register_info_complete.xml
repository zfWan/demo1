<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <!--年龄 身高 体重 车牌号 车龄  紧急联系人联系方式 求助短信内容  -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/age" />


            <EditText
                android:id="@+id/i8_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入您的年龄"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />
            <ToggleButton
                android:id="@+id/i8_age_hint"
                android:layout_width="@dimen/I8d25"
                android:layout_height="@dimen/I8d25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/I8d12"
                android:background="@drawable/age_hint"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/height" />


            <EditText
                android:id="@+id/i8_height"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入您的身高"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />

            <ToggleButton
                android:id="@+id/i8_cm"
                android:layout_width="@dimen/I8d25"
                android:layout_height="@dimen/I8d25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/I8d12"
                android:background="@drawable/cm"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/I8d44"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/I8d10"
                android:layout_marginRight="@dimen/I8d10"
                android:src="@drawable/weight" />

            <EditText
                android:id="@+id/i8_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入您的体重"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />
            <ToggleButton
                android:id="@+id/i8_kg"
                android:layout_width="@dimen/I8d25"
                android:layout_height="@dimen/I8d25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/I8d12"
                android:background="@drawable/kg"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/I8d44"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/I8d10"
                android:layout_marginRight="@dimen/I8d10"
                android:src="@drawable/car_plate" />

            <EditText
                android:id="@+id/i8_car_plate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入您的车牌号"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />

            <ToggleButton
                android:id="@+id/i8_carplate"
                android:layout_width="@dimen/I8d25"
                android:layout_height="@dimen/I8d25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/I8d12"
                android:background="@drawable/car_plate_hint"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/I8d44"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/I8d10"
                android:layout_marginRight="@dimen/I8d10"
                android:src="@drawable/car_age" />

            <EditText
                android:id="@+id/i8_car_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入您的车龄"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />

            <ToggleButton
                android:id="@+id/i8_age_car_hint"
                android:layout_width="@dimen/I8d25"
                android:layout_height="@dimen/I8d25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/I8d12"
                android:background="@drawable/car_age_hint"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/I8d44"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/I8d10"
                android:layout_marginRight="@dimen/I8d10"
                android:src="@drawable/contact" />

            <EditText
                android:id="@+id/i8_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入紧急联系人电话"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />

            <ToggleButton
                android:id="@+id/i8_contact_hint"
                android:layout_width="@dimen/I8d25"
                android:layout_height="@dimen/I8d25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/I8d12"
                android:background="@drawable/cantact_hint"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/I8d44"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/I8d10"
                android:layout_marginRight="@dimen/I8d10"
                android:src="@drawable/message" />

            <EditText
                android:id="@+id/i8_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入求助短信内容"
                android:singleLine="false"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />

            <ToggleButton
                android:id="@+id/i8_message_hint"
                android:layout_width="@dimen/I8d25"
                android:layout_height="@dimen/I8d25"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/I8d12"
                android:background="@drawable/message_hint"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/i8_accountLoginBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/I8d35"
            android:orientation="horizontal">

            <Button
                android:id="@+id/i8_enter_index"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/I8d45"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/i8_login_btn_bg"
                android:text="进入首页"
                android:textColor="@color/i8_white_f3"
                android:textSize="@dimen/i8_edit_text_size_16" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>